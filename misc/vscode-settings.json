{
  "window.autoDetectColorScheme": false,
  "editor.fontSize": 15,
  "editor.fontWeight": "normal",
  "editor.fontFamily": "sf mono",
  "editor.lineHeight": 18,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "none",
  "workbench.welcomePage.preferReducedMotion": true,
  "workbench.colorTheme": "Default Light+",
  "workbench.colorCustomizations": {
    // #E8E3D9
    // (bg1 "#E0DACC")
    // (bg2 "#D7CEBC")
    // (bg3 "#CDC2AC")
    // (bg4 "#C4B79C")
    // (fg1 "#0F0F0F")
    // (fg2 "#1C1C1C")
    // (fg3 "#262626")
    // (fg4 "#303030")
    "[Default Light+]": {
      "focusBorder": "#733900",
      // editor
      "editor.background": "#E8E3D9",
      "editor.foreground": "#000000",
      "editorLineNumber.foreground": "#C4B79C",
      "editorLineNumber.activeForeground": "#733900",
      // tab
      "tab.border": "#CDC2AC",
      "tab.activeBorderTop": "#733900",
      "tab.inactiveBackground": "#D7CEBC",
      "editorGroupHeader.tabsBackground": "#D7CEBC",
      // other ui elements
      "activityBar.background": "#CDC2AC",
      "activityBar.foreground": "#000000",
      "activityBarBadge.foreground": "#D9E3E8",
      "activityBarBadge.background": "#004d74",
      // sidebar
      "sideBar.foreground": "#303030",
      "sideBar.background": "#E0DACC",
      "list.hoverBackground": "#D7CEBC",
      "list.activeSelectionForeground": "#E8E3D9",
      "list.activeSelectionBackground": "#733900",
      "list.inactiveSelectionBackground": "#E8E3D9",
      "sideBarSectionHeader.foreground": "#000000",
      "sideBarSectionHeader.background": "#D7CEBC",
      // status bar
      "statusBar.foreground": "#000000",
      "statusBar.background": "#CDC2AC",
      // input
      "input.background": "#E8E3D9",
      "input.border": "#C4B79C",
      "dropdown.background": "#E8E3D9",
      "dropdown.border": "#C4B79C",
      "quickInput.background": "#E0DACC",
    }
  },
  "editor.tokenColorCustomizations": {
    "[Default Light+]": {
      "textMateRules": [
        {
        "scope": [
          "constant.language",
          "constant.other"
        ],
        "settings": {
          "foreground": "#7300ac",
          "fontStyle": "italic"
        }
      },
        {
        "scope": ["keyword", "storage.modifier"],
        "settings": {
          "foreground": "#004d74",
          "fontStyle": "bold"
        }
      },
        {
        "scope": "keyword.operator",
        "settings": {
          "foreground": "#000000",
          "fontStyle": "bold"
        }
      }
      ],
      "keywords": "#004d74",
      "comments": "#733900",
      "functions": "#8e005f",
      "types": "#970000",
      "numbers": "#005600",
      "strings": "#005600",
      "variables": "#000000"
    }
  },
  "[go]": {},
  "go.formatTool": "goimports",
  "go.useLanguageServer": true,
}
