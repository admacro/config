!$fg="000000"
!$bg="E8E3D9"

!$orange="733900"
!$blue="0000f5"

!$bggreen="D9E8D9"
!$bgorange="E8E0D9"
!$bgcyan="D9E3E8"

!$bg1="E0D9CC"
!$fggray="6C6C6C"

<style>
  root {
    LineColor $fggray
    LineThickness 1
  }
</style>

skinparam defaultFontName Monospaced
skinparam defaultFontSize 14
skinparam defaultFontColor $fg
skinparam BackgroundColor $bg
skinparam HyperlinkColor $blue
skinparam RoundCorner 20
skinparam BoxPadding 20

skinparam ArrowColor $orange
skinparam ArrowThickness 1.5

/' title '/
skinparam title {
        FontSize 24
        BorderThickness 0
}

/' sequence '/
skinparam sequence {
        LifeLineBackgroundColor $bg1
        GroupFontColor $fggray
        BoxBackgroundColor $bg
}

/' participant '/
skinparam participant {
        BackgroundColor $bg1
        Padding 10
}

/' note '/
skinparam note {
        BackgroundColor $bggreen
        Shadowing true
        FontStyle italic
}

/' database '/
skinparam database {
        BackgroundColor $bg1
}

skinparam group {
        BodyBackgroundColor $bg1
}
